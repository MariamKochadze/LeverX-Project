{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*", "**/*.svg"],
    "typeRoots": ["node_modules/@types", "src/types"]
}
